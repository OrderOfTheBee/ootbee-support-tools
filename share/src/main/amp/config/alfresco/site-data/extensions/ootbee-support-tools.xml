            <description>${project.name}</description>
            <version>${noSnapshotVersion}</version>
            <auto-deploy>true</auto-deploy>
            
            <!-- nothing here yet -->
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.share.pages.admin-console</targetPackageRoot>
                    <sourcePackageRoot>org.orderofthebee.support-tools.pages.customisations</sourcePackageRoot>
                </customization>
            </customizations>
        </module>
    </modules>
</extension>